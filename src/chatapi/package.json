{
  "name": "chatapi",
  "version": "1.0.0",
  "description": "Chat REST API",
  "main": "main.py",
  "devDependencies": {
    "chromedriver": "^2.46.0",
    "concurrently": "^4.1.0",
    "cucumber": "^5.1.0",
    "selenium-webdriver": "^4.0.0-alpha.1"
  },
  "scripts": {
    "env-install": "source env/bin/activate && pip install -r requirements.txt",
    "createsuperuser": "DJANGO_SETTINGS_MODULE=chatapisite.settings_dev_local source env/bin/activate && python manage.py createsuperuser",
    "makemigrations": "DJANGO_SETTINGS_MODULE=chatapisite.settings_dev_local source env/bin/activate && python manage.py makemigrations chatapi",
    "migrate": "DJANGO_SETTINGS_MODULE=chatapisite.settings_dev_local source env/bin/activate && python manage.py migrate",
    "start-dev-local": "DJANGO_SETTINGS_MODULE=chatapisite.settings_dev_local source env/bin/activate && python manage.py runserver 8201",
    "test": "behave"
  }
}
