<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <pattern>%d [%-20.20(%thread)] %-6level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <logger name="com.sorelmitra.microservice" level="TRACE"/>

    <root level="info">
        <appender-ref ref="STDOUT" />
    </root>
</configuration>